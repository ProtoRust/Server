<?php

	$init 	= function() {

		$defineRoot 	= function() {			
			$sep 		= explode("/", $_SERVER['REQUEST_URI']);
			$sep 		= count($sep) - 1;
			$relRoot 	= str_repeat("../", $sep);

			define('RELROOT', $relRoot);
		};

		$defineRoot();

		$requests 			= include('../server/requests.php');
		$auth 				= include('../server/auth.php');

		print_r([$auth, $requests]);
	};


	$init();


?>